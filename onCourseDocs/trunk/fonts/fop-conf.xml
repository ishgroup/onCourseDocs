<fop version="1.0">
  <strict-configuration>true</strict-configuration>

  <font-base>../fonts</font-base>

  <source-resolution>72</source-resolution>
  <target-resolution>150</target-resolution>

  <renderers>
    <renderer mime="application/pdf">
      <fonts>
        <!-- note that the paths below are relative to the FOP baseURI -->
        <font embed-url="CabinSketch.ttf">
          <font-triplet name="CabinSketch" style="normal" weight="400"/>
        </font>
        <font embed-url="Roboto-Regular.ttf">
          <font-triplet name="Roboto" style="normal" weight="400"/>
        </font>
        <font embed-url="Roboto-Light.ttf">
          <font-triplet name="Roboto" style="light" weight="300"/>
        </font>
        <font embed-url="Roboto-Bold.ttf">
          <font-triplet name="Roboto" style="bold" weight="700"/>
        </font>
      </fonts>
    </renderer>
  </renderers>

  <fonts>
    <substitutions>
      <substitution>
        <from font-family="Roboto" font-style="normal"/>
        <to font-family="Roboto" font-style="light" font-weight="300"/>
      </substitution>
      <substitution>
        <from font-family="Roboto" font-style="italic"/>
        <to font-family="Roboto" font-style="light" font-weight="300"/>
      </substitution>
      <substitution>
        <from font-family="Roboto" font-style="normal" font-weight="700"/>
        <to font-family="Roboto" font-style="bold" font-weight="700"/>
      </substitution>
      <substitution>
        <from font-family="CabinSketch" font-style="italic" font-weight="700"/>
        <to font-family="CabinSketch" font-style="normal" font-weight="400"/>
      </substitution>
      <substitution>
        <from font-family="CabinSketch" font-style="normal" font-weight="700"/>
        <to font-family="CabinSketch" font-weight="400"/>
      </substitution>
    </substitutions>
  </fonts>
</fop>