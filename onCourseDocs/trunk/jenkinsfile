#!groovyâ€‹

pipeline {
    agent { 
        label 'freebsd'
    }

    environment {
        DEPLOY_SERVER = "jenkins@astonish.ish.com.au"
        DEPLOY_PATH = "/usr/fileshare/website-deploy/ish/onCourse/doc"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            parallel {
                stage('Build API') {
                    steps {
                        sh "./gradlew apidocs:docbookHtml"
                    }
                }
                stage('Build release notes') {
                    steps {
                        sh "./gradlew release-notes:docbookHtml"
                    }
                }
                stage('Build manual') {
                    steps {
                        sh "./gradlew manual:docbook"
                    }
                }
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: '**/build/html/**/*,**/build/pdf/*.pdf,apidocs/build/html/**/*'
            }
        }

        // stage('Deploy snapshot') {
        //     steps {
        //         sh 'scp -r manual/build/pdf/*.pdf ${env.DEPLOY_SERVER}:${env.DEPLOY_PATH}/${docVersion}/manual/'
        //         sh 'scp -r apidocs/build/html/*  ${env.DEPLOY_SERVER}:${env.DEPLOY_PATH}/${docVersion}/api/'
        //         sh 'scp -r release-notes/build/html/* ${env.DEPLOY_SERVER}:${env.DEPLOY_PATH}/release-notes/'
        //         sh 'scp -r manual/build/html/* ${env.DEPLOY_SERVER}:${env.DEPLOY_PATH}/${docVersion}/manual/'
        //         sh 'ssh ${env.DEPLOY_SERVER} "cd ${env.DEPLOY_PATH}; rm -f latest; ln -s ${docVersion} latest"'
        //     }
        // }
    }

    post { 
        failure { 
            mail(
                from: "development@@ish.com.au", 
                to: "development@ish.com.au", 
                subject: "FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """<p>FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
                <p>Check console output at &QUOT;<a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a>&QUOT;</p>""",
            )
        }
    }

    options {
        buildDiscarder(logRotator(numToKeepStr:'10'))
        timeout(time: 10, unit: 'MINUTES')
    }
}