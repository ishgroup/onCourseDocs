#!groovyâ€‹

pipeline {
    agent { 
        label 'freebsd'
    }

    parameters {
        string(defaultValue: '', description: 'Release version. Leave blank to not release.', name: 'version')
    }

    environment {
        DEPLOY_SERVER = "deploy@astonish.ish.com.au"
        DEPLOY_PATH = "/usr/fileshare/website-deploy/ish/onCourse/doc"
    }

    stages {
        stage('Build API docs') {
            steps {
                sh "./gradlew apidocs:docbookHtml"
            }
        }

        stage('Build release notes') {
            steps {
                sh "./gradlew release-notes:docbookHtml"
            }
        }

        stage('Build manual') {
            steps {
                sh "./gradlew manual:docbook"
            }
        }

        stage('Deploy release') {
            when {
                expression { params.version != '' }
            }
            steps {
                script {
                    currentBuild.displayName = "Release ${params.version}"
                }
                sh "scp -r manual/build/pdf/*.pdf ${env.DEPLOY_SERVER}:${env.DEPLOY_PATH}/${params.version}/manual/"
                sh "scp -r apidocs/build/html/* ${env.DEPLOY_SERVER}:${env.DEPLOY_PATH}/${params.version}/api/"
                sh "scp -r release-notes/build/html/* ${env.DEPLOY_SERVER}:${env.DEPLOY_PATH}/release-notes/"
                sh "scp -r manual/build/html/* ${env.DEPLOY_SERVER}:${env.DEPLOY_PATH}/${params.version}/manual/"
                sh "ssh ${env.DEPLOY_SERVER} 'cd ${env.DEPLOY_PATH}; rm -f latest; ln -s ${params.version} latest'"
                sh "ssh ${env.DEPLOY_SERVER} '/usr/local/etc/periodic/rsynctosplash.sh'"
            }
        }
    }

    post { 
        failure { 
            mail(
                to: "development@ish.com.au", 
                subject: "${currentBuild.result}: Job ${env.JOB_NAME} [${env.BUILD_NUMBER}]",
                body: "Check console output at ${env.BUILD_URL}",
            )
        }
        unstable { 
            mail(
                to: "development@ish.com.au", 
                subject: "${currentBuild.result}: Job ${env.JOB_NAME} [${env.BUILD_NUMBER}]",
                body: "Check console output at ${env.BUILD_URL}",
            )
        }
        success {
            archiveArtifacts artifacts: '**/build/html/**/*,**/build/pdf/*.pdf,apidocs/build/html/**/*'
        }
    }

    options {
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr:'10'))
        timeout(time: 60, unit: 'MINUTES')
    }
}