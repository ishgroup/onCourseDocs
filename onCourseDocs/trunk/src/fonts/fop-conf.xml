<fop version="1.0">
  <strict-configuration>true</strict-configuration>

  <font-base>../fonts</font-base>

  <source-resolution>72</source-resolution>
  <target-resolution>150</target-resolution>

  <renderers>
    <renderer mime="application/pdf">
      <fonts>
        <!-- note that the paths below are relative to the FOP baseURI -->
        <font embed-url="PortLligatSlab-Regular.ttf">
          <font-triplet name="Port Lligat Slab" style="normal" weight="400"/>
        </font>
        <font embed-url="Merriweather-Regular.ttf">
          <font-triplet name="Merriweather" style="normal" weight="400"/>
        </font>
        <font embed-url="Merriweather-Light.ttf">
          <font-triplet name="Merriweather" style="normal" weight="300"/>
        </font>
        <font embed-url="Merriweather-Bold.ttf">
          <font-triplet name="Merriweather" style="normal" weight="500"/>
        </font>
        <font embed-url="Merriweather-Black.ttf">
          <font-triplet name="Merriweather" style="normal" weight="700"/>
        </font>
      </fonts>
    </renderer>
  </renderers>

  <fonts>
    <substitutions>
      <substitution>
        <from font-family="Merriweather" font-style="normal"/>
        <to font-family="Merriweather" font-style="normal" font-weight="300"/>
      </substitution>
      <substitution>
        <from font-family="Port Lligat Slab" font-style="italic" font-weight="700"/>
        <to font-family="Port Lligat Slab" font-style="normal" font-weight="400"/>
      </substitution>
      <substitution>
        <from font-family="Port Lligat Slab" font-style="normal" font-weight="700"/>
        <to font-family="Port Lligat Slab" font-weight="400"/>
      </substitution>
    </substitutions>
  </fonts>
</fop>